{% extends 'admin/admin.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ event.title }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ event.image }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ event.StartDate ? event.StartDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ event.EndDate ? event.EndDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Venue</th>
                <td>{{ event.venue }}</td>
            </tr>
            <tr>
                <th>News</th>
                <td>{{ event.news }}</td>
            </tr>
            <tr>
                <th>IsPublished</th>
                <td>{{ event.isPublished ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('event_index') }}">back to list</a>

    <a href="{{ path('event_edit', {'id': event.id}) }}">edit</a>

    {{ include('event/_delete_form.html.twig') }}
{% endblock %}